{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6", "es5", "dom"],
        "module": "es2015",
        "strict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "paths": {
            "@banquette/core": ["packages/core/src/index.ts"],
            "@banquette/dom-modules": ["packages/dom-modules/src/index.ts"],
            "@banquette/event": ["packages/event/src/index.ts"],
            "@banquette/fingerprint": ["packages/fingerprint/src/index.ts"],
            "@banquette/http": ["packages/http/src/index.ts"],
            "@banquette/log": ["packages/log/src/index.ts"],
            "@banquette/promise": ["packages/promise/src/index.ts"],
            "@banquette/storage": ["packages/storage/src/index.ts"],
            "@banquette/utils": ["packages/utils/src/index.ts"],
            "@banquette/utils-base64": ["packages/utils-base64/src/index.ts"],
            "@banquette/utils-color": ["packages/utils-color/src/index.ts"],
            "@banquette/utils-crypto": ["packages/utils-crypto/src/index.ts"],
            "@banquette/utils-easing": ["packages/utils-easing/src/index.ts"],
            "@banquette/utils-json": ["packages/utils-json/src/index.ts"]
        },
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types", "./packages/vue-core/src/@types"]
    }
}
