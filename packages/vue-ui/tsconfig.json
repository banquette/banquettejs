{
    "compilerOptions": {
        "allowJs": true,
        // "web-bluetooth" included as a workaround an issue with VueUse.
        // @see https://github.com/vueuse/vueuse/issues/1704
        //
        // "@types/web-bluetooth" included in package.json because of this too.
        "types": ["web-bluetooth"]
    },
    "extends": "../../tsconfig.json",
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
